{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "outDir": "out",
    "moduleResolution": "node",
    "rootDirs": ["src", "../common"],
    "paths": {
      "common/*": ["../common/*"],
      "server/*": ["src/*"],
      "client/*": ["../client/src/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ],
    "strict": true,
    "target": "es5",
    "esModuleInterop": true,
    "sourceMap": true
  },
  "exclude": [
    "./node_modules"
  ],
  "include": [
    "src",
    "../common"
  ]
}
